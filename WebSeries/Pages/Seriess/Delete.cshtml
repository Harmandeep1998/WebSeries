@page
@model WebSeries.Pages.Seriess.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1 class="display-4 heading">Delete Web Series</h1>
    <a asp-page="Index" class="btn btn-primary">View All Web Series</a>
</div>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.SeriesName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.SeriesName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.Platform)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.Platform.PlatformName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.Language)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.Language)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Series.Season)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Series.Season)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Series.Id" />
        <input type="submit" value="Delete Web Series" class="btn btn-danger" /> 
    </form>
</div>
